    <div id="shoppingcart">
<h1>Shopping cart</h1>
<% if(!shoppingCart.length) { %>
    <p>Shopping cart empty</p>
    <p><a href="/userHome">Shop here!</a></p>
<% } else { %>

    <% shoppingCart.forEach((book) => { %>
    
<div class="bookincart">
    <img src="<%=book.image%>">
    <p><%=book.name%></p>
    <p><%= book.author %></p>
    <p><%= book.price %></p>
</div>

<%})%>
<button type="submit">Checkout</button>

